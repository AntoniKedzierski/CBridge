<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <FontFamily x:Key="Lato">pack://application:,,,/Fonts/#Lato</FontFamily>

    <!-- Colors -->
    <Color x:Key="OnyxColor">#191919</Color>
    <Color x:Key="CarbonBlackColor">#1C1C1C</Color>
    <Color x:Key="GraphiteColor">#333333</Color>

    <Color x:Key="SaddleBrownColor">#FF7A4024</Color>
    <Color x:Key="SpicyOrangeColor">#FFC6511A</Color>
    <Color x:Key="AmberEarthColor">#FFE38318</Color>
    <Color x:Key="AmberFlameColor">#FFFFB515</Color>

    <Color x:Key="TropicalTealColor">#FF4FBAB4</Color>
    <Color x:Key="PearlAquaColor">#FF9BD2CF</Color>
    <Color x:Key="AlabasterGreyColor">#A8A8A8</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="OnyxBrush" Color="{StaticResource OnyxColor}" />
    <SolidColorBrush x:Key="CarbonBlackBrush" Color="{StaticResource CarbonBlackColor}" />
    <SolidColorBrush x:Key="GraphiteBrush" Color="{StaticResource GraphiteColor}" />

    <SolidColorBrush x:Key="SaddleBrownBrush" Color="{StaticResource SaddleBrownColor}" />
    <SolidColorBrush x:Key="SpicyOrangeBrush" Color="{StaticResource SpicyOrangeColor}" />
    <SolidColorBrush x:Key="AmberEarthBrush" Color="{StaticResource AmberEarthColor}" />
    <SolidColorBrush x:Key="AmberFlameBrush" Color="{StaticResource AmberFlameColor}" />

    <SolidColorBrush x:Key="TropicalTealBrush" Color="{StaticResource TropicalTealColor}" />
    <SolidColorBrush x:Key="PearlAquaBrush" Color="{StaticResource PearlAquaColor}" />
    <SolidColorBrush x:Key="AlabasterGreyBrush" Color="{StaticResource AlabasterGreyColor}" />
</ResourceDictionary>